{
    "model": {
        "table": "def_cat_language",
        "primaryKey": "language_id",
        "enabled": true,
        "sort_order": 1
    },
    "operations": {
        "active": {"sort_order": 1, "plural": true, "singular": false},
        "passive": {"sort_order": 2, "plural": true, "singular": false},
        "delete": {"sort_order": 2, "plural": true, "singular": false}
    },
    "fields": {
        "language_id": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "number",
                "sort_order": 1
            }
        },
        "uuid": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "text",
                "sort_order": 1
            }
        },
        "code": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "text",
                "sort_order": 3
            }
        },
        "name": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "text",
                "sort_order": 2
            }
        },
        "description": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "textarea",
                "sort_order": 4
            }
        },
        "image_path": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "image",
                "sort_order": 5
            }
        },
        "price": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "number",
                "sort_order": 6
            }
        },
        "currency_code": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "modal",
                "relationship": {
                    "type": "currency",
                    "route": "definition/localization/currency",
                    "fields": {
                        "id": "code",
                        "label": "name"
                    }
                },
                "sort_order": 7
            }
        },
        "stock": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "number",
                "sort_order": 8
            }
        },
        "sku": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "text",
                "sort_order": 9
            }
        },
        "category_id": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "select",
                "relationship": {
                    "type": "currency",
                    "route": "definition/catalog/category",
                    "fields": {
                        "id": "category_id",
                        "label": "name"
                    }
                },
                "sort_order": 10
            }
        },
        "is_active": {
            "actions": ["index", "show", "store", "update"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "select",
                "default": "true",
                "options": {
                    "true": "active",
                    "false": "passive"
                },
                "sort_order": 11
            }
        },
        "created_at": {
            "actions": ["index", "show"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "datetime",
                "sort_order": 12
            }
        },
        "created_by": {
            "actions": ["index", "show"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "modal",
                "relationship": {
                    "name": "created_by",
                    "route": "system/user",
                    "fields": {
                        "id": "user_id",
                        "label": "first_name"
                    }
                },
                "sort_order": 13
            }
        },
        "updated_by": {
            "actions": ["index", "show"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "modal",
                "relationship": {
                    "name": "updated_by",
                    "route": "system/user",
                    "fields": {
                        "id": "user_id",
                        "label": "first_name"
                    }
                },
                "sort_order": 14
            }
        },
        "updated_at": {
            "actions": ["index", "show"],
            "table": ["showing", "filtering", "sorting", "hiding"],
            "form": {
                "type": "datetime",
                "sort_order": 15
            }
        }
    },
    "validations": {
        "store": {
            "name": ["required", "string", "max:255"],
            "description": ["nullable", "string"],
            "image_path": ["nullable", "string", "max:255"],
            "price": ["required", "numeric", "min:0"],
            "currency_code": ["required", "string", "max:3", "exists:def_loc_currency,code"],
            "sku": ["required", "string", "max:50"],
            "category_id": ["required", "integer", "exists:def_cat_category,category_id"],
            "is_active": ["required", "boolean"]
        },
        "update":  {
            "name": ["required", "string", "max:255"],
            "description": ["nullable", "string"],
            "image_path": ["nullable", "string", "max:255"],
            "price": ["required", "numeric", "min:0"],
            "currency_code": ["required", "string", "max:3", "exists:def_loc_currency,code"],
            "sku": ["required", "string", "max:50"],
            "category_id": ["required", "integer", "exists:def_cat_category,category_id"],
            "is_active": ["required", "boolean"]
        }
    }
}
